<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="WhitePaperBible.Views.LoginModalPage">
    
    <ContentPage.Resources>
        <StyleSheet>
            <![CDATA[
            .body {
                color: #fff;
                align-items: center;
                justify-content: center;
                background-color: #053C5E;
            }

            .container {
                background-color: #0A2239;
                width: 300;
                height: 340;
                flex-direction: column;
                margin-top: -30;
            }

            .login-form {
                height: 260;
                flex-direction: column;
                margin-top: 20;
            }

            .logo {
                font-size: 20;
                margin-top: 40;
                text-align: center;
            }

            entry {
                height: 50;
                margin: 10 20 0;
                color: #333;
            }

            button {
                background-color: #1F7A8C;
                margin: 25 20 0;
            }

            .Valid {
                background-color: #fff;
            }

            .InValid {
                background-color: #ff0000;
            }

            .strength {
                margin-top: 20;
            }
            ]]>
        </StyleSheet>
        
    </ContentPage.Resources>
    
    <Grid>
        
    
    <ScrollView>
        <FlexLayout StyleClass="body" x:Name="Form">
            <FlexLayout x:Name="LoginForm" StyleClass="container">
                <Label Text="Login" StyleClass="logo"/>
                <FlexLayout StyleClass="login-form">
                    <Entry x:Name="UserNameEntry" 
                           IsSpellCheckEnabled="false" 
                           Visual="Material"
                           TextColor="White"
                           PlaceholderColor="White"
                           BackgroundColor="Transparent"
                           Placeholder="UserName">
                    </Entry>
                    <Entry x:Name="PasswordEntry" 
                           Placeholder="Password" 
                           Visual="Material"
                           TextColor="White"
                           PlaceholderColor="White"
                           BackgroundColor="Transparent"
                           IsPassword="true">
                    </Entry>
                        
                    <Button Text="Log in" Command="{Binding LoginCommand}"/>
                    <Button Text="Cancel" 
                            Margin="10"
                            BackgroundColor="Transparent" 
                            Command="{Binding CloseModalCommand}"/>
                </FlexLayout>
            </FlexLayout>
        </FlexLayout>
    </ScrollView>
        
    <!--<StackLayout BackgroundColor="Black" 
                 HeightRequest="62" 
                 VerticalOptions="Start">
        <Button Text="Close" 
                HeightRequest="42"
                HorizontalOptions="Start"
                TextColor="White"
                Padding="10"
                Margin="0"
                BackgroundColor="Transparent"
                Command="{Binding CloseModalCommand}"/>            
    </StackLayout>    
        -->
    </Grid>
</ContentPage>
